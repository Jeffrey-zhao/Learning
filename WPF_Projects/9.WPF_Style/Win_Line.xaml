<Window x:Class="_9.WPF_Style.Win_Line"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_9.WPF_Style"
        mc:Ignorable="d"
        Title="Win_Line" Height="350" Width="525">
    <Grid>
        <Line X1="10" Y1="20" X2="260"  Y2="20" Stroke="Red" StrokeThickness="5"/>
        <Line X1="10" Y1="20" X2="10"  Y2="260" Stroke="Blue" StrokeThickness="5"/>
        <Line X1="10" Y1="20" X2="260"  Y2="260" Stroke="Green" StrokeThickness="10" StrokeEndLineCap="Triangle"/>
    </Grid>
</Window>
