<Window x:Class="_2.WPF_Layout.CanvasLayout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2.WPF_Layout"
        mc:Ignorable="d"
        Title="CanvasLayout" Height="140" Width="300" ResizeMode="NoResize">
    <Canvas d:IsLocked="True">
        <TextBlock Text="User Name: " Canvas.Left="12" Canvas.Top="12" d:IsLocked="True"/>
        <TextBox Height="23" Width="200" BorderBrush="Black" Canvas.Left="80" Canvas.Top="9" d:IsLocked="True"/>
        <TextBlock Text="Password: " Canvas.Left="12" Canvas.Top="41" d:IsLocked="True"/>
        <TextBox Height="23" Width="200" BorderBrush="Black" Canvas.Left="80" Canvas.Top="38" d:IsLocked="True"/>
        <Button Content="确定" Height="22" Width="80" Canvas.Left="115" Canvas.Top="67" d:IsLocked="True"/>
        <Button Content="清空" Height="22" Width="80" Canvas.Left="200" Canvas.Top="67" d:IsLocked="True"/>
    </Canvas>
</Window>
